            <ImageView
                android:id="@+id/rectangle_7"
                android:layout_width="336dp"
                android:layout_height="73dp"
                android:layout_marginStart="37dp"
                android:layout_marginTop="300dp"

                android:contentDescription="rectangle_7"
                android:src="@drawable/rectangle_7" />

            <EditText
                android:id="@+id/et_username"
                android:fontFamily="@font/inter"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:textColor="@color/_bg__android_small___1_ek2_color"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="315dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="lhlam.lehoang"
                />
            <!--    android:hint="Enter username"-->
            <EditText
                android:id="@+id/et_password"
                android:fontFamily="@font/inter"
                android:textStyle="bold|italic"
                android:textSize="20dp"
                android:textColor="@color/_bg__android_small___1_ek2_color"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="387dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="023345458"
                />

            <Button
                android:id="@+id/bt_forget_password"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="460dp"
                android:layout_marginEnd="45dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_light"
                android:text="@string/forgot_password__string"
                android:textColor="@color/forgot_password__color"
                android:textSize="13dp"
                android:textStyle="bold|italic" />

            <Button
                android:id="@+id/bt_login"
                android:backgroundTint="#FFD273"
                android:layout_width="135dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="209dp"
                android:layout_marginTop="533dp"
                android:layout_marginEnd="40dp"
                android:layout_marginBottom="0dp"
                app:cornerRadius="30dp"
                android:drawableRight="@drawable/arrow_1"
                />

            <Button
                android:id="@+id/bt_register"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignBottom="@+id/bt_login"
                android:layout_alignParentStart="true"
                android:layout_marginStart="31dp"
                android:layout_marginBottom="0dp"
                android:background="@android:color/transparent"
                android:fontFamily="@font/inter_light"
                android:shadowColor="#000000"
                android:shadowRadius="10"
                android:text="@string/sign_up_string"
                android:textColor="@color/_bg__android_small___1_ek2_color"
                android:textSize="25sp"
                android:textStyle="bold|italic" />

        </RelativeLayout>
